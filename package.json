{
  "name": "rizoma-launcher",
  "version": "1.0.7",
  "productName": "Rizoma Launcher",
  "description": "Launcher Oficial do Servidor Rizoma",
  "author": "Ismael Brandão (https://github.com/IsmaelBrandao)",
  "license": "UNLICENSED",
  "homepage": "https://loja.rizomamc.com.br",
  "bugs": {
    "url": "https://discord.gg/WSDsYymK"
  },
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder build",
    "dist:win": "npm run dist -- -w",
    "dist:mac": "npm run dist -- -m",
    "dist:linux": "npm run dist -- -l",
    "lint": "eslint --config .eslintrc.json ."
  },
  "engines": {
    "node": "20.x.x"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "adm-zip": "^0.5.16",
    "discord-rpc-patch": "^4.0.1",
    "ejs": "^3.1.10",
    "ejs-electron": "^3.0.0",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.1.1",
    "github-syntax-dark": "^0.5.0",
    "got": "^11.8.5",
    "helios-core": "~2.2.4",
    "helios-distribution-types": "^1.3.0",
    "jquery": "^3.7.1",
    "lodash.merge": "^4.6.2",
    "semver": "^7.6.3",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IsmaelBrandao/RizomaLauncher.git"
  },
  "build": {
    "appId": "com.rizomamc.launcher",
    "productName": "Rizoma Launcher",
    "artifactName": "${productName}-setup-${version}.${ext}",
    "copyright": "Copyright © 2025 Ismael Brandão",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "app/assets/images/SealCircle.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "!{dist,.gitignore,.vscode,docs,.travis.yml,.nvmrc,.eslintrc.json,README.md,dev-app-update.yml}"
    ],
    "publish": {
      "provider": "github",
      "owner": "IsmaelBrandao",
      "repo": "RizomaLauncher"
    }
  }
}